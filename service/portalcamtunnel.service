[Unit]
Description=Portal Camera Tunnel
Requires=network.target
After=network.target

[Service]
Restart=always
RestartSec=20
User=sshtunnel
ExecStart=/usr/bin/ssh -i /home/sshtunnel/.ssh/id_rsa -NT -o ExitOnForwardFailure=yes -o ServerAliveInterval=60 -o ServerAliveCountMax=4 -R :29443:localhost:9443 relay@portal.mmccool.net

[Install]
WantedBy=multi-user.target

