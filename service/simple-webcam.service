[Unit]
Description=Simple Web Camera
Requires=network.target
After=network.target

[Service]
Restart=always
RestartSec=20
User=webcam
ExecStart=/usr/bin/nodejs /home/webcam/simple-webcam/main.js
#ExecStart=/usr/bin/node /home/webcam/simple-webcam/main.js
#ExecStart=/usr/local/bin/node /home/webcam/simple-webcam/main.js

[Install]
WantedBy=multi-user.target

