{
  "@context": ["http://www.w3.org/ns/td",
               {
                   "iot": "http://iotschema.org/",
                   "http": "http://www.w3.org/2011/http#"
               }
  ],
  "@type": ["Thing"],
  "name": "Intel-WebSpeak-{{{hostname}}}",
  "description": "A simple text to speech service",
  "support": "mailto:michael.mccool@intel.com",
  "version": {"instance":"0.1.0"},
  "created": "2018-09-10T06:30+00:00",
  "lastModified": "2018-12-19T03:14+00:00",
  "links": [{
        "href": "https://github.com/mmccool/web-speak",
        "rel": "repository",
        "type": "application/vnd.github.v3+json"
  }],
  "id": "urn:uuid:{{{uuid}}}",
  "securityDefinitions": {
    "nosec_sc": {"scheme":"nosec"},
    "basic_sc": {"scheme":"basic"},
    "digest_sc": {"scheme":"digest"}
  },
  "security": ["nosec_sc"],
  "actions": {
    "say": {
      "input": {
          "type": "string"
      }, 
      "forms": [
        {
          "href": "{{{base}}}/say",
          "contentType": "application/json",
          "op":"invokeaction",
          "http:methodName": "POST"
        },
        {
          "href": "{{{portal0}}}:{{{basicport}}}/api/say",
          "contentType": "application/json",
          "op":"invokeaction",
          "http:methodName": "POST",
          "security": ["basic_sc"]
        },
        {
          "href": "{{{portal0}}}:{{{digestport}}}/api/say",
          "contentType": "application/json",
          "op":"invokeaction",
          "http:methodName": "POST",
          "security": ["digest_sc"]
        },
        {
          "href": "{{{portal1}}}:{{{basicport}}}/api/say",
          "contentType": "application/json",
          "op":"invokeaction",
          "http:methodName": "POST",
          "security": ["basic_sc"]
        },
        {
          "href": "{{{portal1}}}:{{{digestport}}}/api/say",
          "contentType": "application/json",
          "op":"invokeaction",
          "http:methodName": "POST",
          "security": ["digest_sc"]
        }
      ]
    }
  }
}
